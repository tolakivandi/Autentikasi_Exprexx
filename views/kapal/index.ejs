<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        /* Custom CSS untuk menambahkan padding pada body */

        /* Custom CSS untuk menambahkan padding pada tabel */
        .table {
            margin-bottom: 20px;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Alat tangkap App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="../alat_tangkap">alat tangkap</a>
                    <!-- </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./kategori/">kategori</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../pendidikan/">pendidikan</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../keahlian/">keahlian</a>
                    </li> -->
                </ul>
            </div>
        </div>
    </nav>


    <div class="container">
        <% if (messages.success) { %>
        <div class="alert alert-info" role="alert">
            <%= messages.success %>
        </div>
        <% } %>

        <div class="row">
            <div class="col">
                <a href="/kapal/create" class="btn btn-sm btn-success mb-3">Tambah</a> <!-- Menambahkan margin bottom untuk button -->
                <table class="table table-striped table-bordered"> <!-- Menambahkan kelas table-striped dan table-bordered -->
                    <thead class="table-dark"> <!-- Menambahkan kelas table-dark untuk background header -->
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nama kapal</th>
                            <th scope="col">nama alat</th>
                            <th scope="col">nama pemilik</th>
                            <th scope="col">nama dpi</th>
                            <th colspan="2" scope="col">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i < data.length; i++) { %>
                        <tr>
                            <th scope="row"><%= (i+1) %></th>
                            <td><%= data[i].nama_kapal %></td>
                            <td><%= data[i].nama_alat %></td>
                            <td><%= data[i].nama_pemilik %></td>
                            <td><%= data[i].nama_dpi %></td>
                            <td>
                                <a href="/kapal/edit/<%= data[i].id_identitas_kapal %>"
                                    class="btn btn-sm btn-warning">Edit</a>
                            </td>
                            <td>
                                <a href="/kapal/delete/<%= data[i].id_identitas_kapal %>"
                                    class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>
</body>

</html>
